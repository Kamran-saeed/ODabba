<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f39c5c"
    android:scrollbars="vertical"
    android:theme="@style/MyAppTheme"
    tools:context="com.example.kamranchaudhary.odabba.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Select a Package"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            android:alpha=".7"
            android:fontFamily="@font/roboto_bold"
            android:text="Skip"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/monthlyCard1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/packageNameMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Monthly Package"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packageDays1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageNameMon"
                    android:layout_below="@+id/packageNameMon"
                    android:fontFamily="@font/roboto_bold"
                    android:text="27 days" />

                <TextView
                    android:id="@+id/packagePrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rs. 3500/-"
                    android:textColor="@color/odabba_color_main"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/packageDesc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageDays1"
                    android:layout_below="@+id/packageDays1"
                    android:text="Get oDabba for 27 days for just paying once for it and get your lunch hassle free for a month."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/subscribeBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/packagePrice1"
                    android:layout_below="@+id/packageDesc1"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Subscribe"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/monthlyCard2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/monthlyCard1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/packageNameMon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Monthly Package"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packageDays2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageNameMon1"
                    android:layout_below="@+id/packageNameMon1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="24 days" />

                <TextView
                    android:id="@+id/packagePrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rs. 2800/-"
                    android:textColor="@color/odabba_color_main"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/packageDesc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageDays2"
                    android:layout_below="@+id/packageDays2"
                    android:text="Get oDabba for 24 days for just paying once for it and get your lunch hassle free for a month."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/subscribeBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/packagePrice2"
                    android:layout_below="@+id/packageDesc2"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Subscribe"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/weeklyCard1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/monthlyCard2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/packageNameWeek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Weekly Package"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packageDays3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageNameWeek1"
                    android:layout_below="@+id/packageNameWeek1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="6 days" />

                <TextView
                    android:id="@+id/packagePrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rs. 1200/-"
                    android:textColor="@color/odabba_color_main"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/packageDesc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageDays3"
                    android:layout_below="@+id/packageDays3"
                    android:text="Get oDabba for 6 days for just paying once for it and get your lunch hassle free for a week."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/subscribeBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/packagePrice3"
                    android:layout_below="@+id/packageDesc3"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Subscribe"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/weeklyCard2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/weeklyCard1"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/packageNameWeek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Weekly Package"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packageDays4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageNameWeek2"
                    android:layout_below="@+id/packageNameWeek2"
                    android:fontFamily="@font/roboto_bold"
                    android:text="5 days" />

                <TextView
                    android:id="@+id/packagePrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rs. 800/-"
                    android:textColor="@color/odabba_color_main"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/packageDesc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/packageDays4"
                    android:layout_below="@+id/packageDays4"
                    android:text="Get oDabba for 5 days for just paying once for it and get your lunch hassle free for a week."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/subscribeBtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/packagePrice4"
                    android:layout_below="@+id/packageDesc4"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Subscribe"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
