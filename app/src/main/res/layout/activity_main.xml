<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/odabba_color_main"
    android:orientation="vertical"
    tools:context="com.example.kamranchaudhary.odabba.Main">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/logo" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo_name" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.05"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/main_loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_white"
            android:fontFamily="@font/roboto_bold"
            android:text="Login"
            android:textColor="@color/odabba_color_main"
            android:textSize="18sp"
            tools:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/cardview_light_background">

            </View>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/roboto_bold"
                android:text="OR"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/cardview_light_background"></View>

        </LinearLayout>

        <Button
            android:id="@+id/main_signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_white"
            android:fontFamily="@font/roboto_bold"
            android:text="Signup"
            android:textColor="@color/odabba_color_main"
            android:textSize="18sp"
            tools:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
